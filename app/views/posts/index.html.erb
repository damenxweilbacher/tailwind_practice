<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-purple-50 mb-5 text-purple-500 font-xl rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Posts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">✧ CREATED POSTS ✧</h1>
    <%= link_to " ╰┈➤ NEW POST ", new_post_path, class: "rounded-lg py-3 px-5 bg-green-400 text-white block font-xl" %>
  </div>

  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "╰┈➤ Show this post", post, class: "ml-2 rounded-lg py-3 px-5 bg-purple-300 inline-block font-xl" %>
      </p>
    <% end %>
  </div>
</div>
